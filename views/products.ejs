<%- include('partials/header') %>

<div class="grid-card card">
    <div class="grid">
        <% for (var i = 0; i < rows.length; i++) { %>
            <% if ((i + 1) % 4 === 1) { %>
                <div class="row">
            <% } if ((i + 1) % 4 === 0) { %>
                </div>
            <% } else { %>
                <div class="card column" style="width: 18rem;">
                    <img class="card-img-top" src="<%= rows[i].prod_link %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= rows[i].prod_name %></h5>
                        <p class="card-text"><%= rows[i].prod_price %></p>
                        <div class="product_add">
                            <input type="number" name="qty" placeholder="Quantity" class="form-control qty_text">
                            <a href="#" class="btn btn-primary add_button">Add</a>
                        </div>
                    </div>
                </div> 
            <% } %>
        <% } %>

<%- include('partials/footer') %>