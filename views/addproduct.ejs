<%- include('partials/header') %>

<div class="container-form container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <center><h2 id="formheading">Add Product</h2></center>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="product">Product</label>
                                <input type="text" name="product" class="form-control" id="product" placeholder="Text Here" autofocus required>
                            </div>
                            <div class="form-group">
                                <label for="price">Price</label>
                                <input type="number" name="price" class="form-control" id="price" placeholder="Rs." required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="link">Image Link</label>
                            <input type="text" name="link" class="form-control" id="link" placeholder="Paste Link Here" required>
                        </div>
                        <center>
                            <button style="margin-top: 1rem;" type="submit" class="btn btn-primary">Submit</button>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>